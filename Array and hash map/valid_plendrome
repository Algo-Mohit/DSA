class Solution {
public:
    bool isPalindrome(string s) {

        string temp = "";

        for(int i = 0; i < s.size(); i++) {
            char ch = s[i];

            if((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z') || (ch >= '0' && ch <= '9')) 
                {
                if(ch >= 'A' && ch <= 'Z')
                    ch = ch + 32;

                temp += ch;
                }
            }

        string rev = "";
        for(int i = temp.size() - 1; i >= 0; i--) {
            rev += temp[i];
        }

        return rev == temp;
    }
};